extends layouts/focus

block seo
  title Masuk | Reksawatch.com
  link(rel='canonical', href='http://www.reksawatch.com/signin')

block content
  .uk-container.uk-container-small
    h1.uk-heading-line.uk-text-center.uk-margin-top Silakan masuk ke dalam akun anda
    form(action='/signin', method='POST')
      input(type='hidden', name='_csrf', value=csrfToken)
      input.uk-input.uk-margin-top(type='email', name='email', placeholder='Email', tabindex='1', required="true", autofocus)
      input.uk-input.uk-margin-top(type='password', name='password', placeholder='Password', tabindex='2', required="true")
      button.uk-button.uk-button-primary.uk-margin-top.uk-width-1-1(type='submit') Masuk

  if flash
    input(type='hidden', class='js-flash-type', value=flash.type)
    input(type='hidden', class='js-flash-message', value=flash.message)

block script
  if flash
    script(type='text/javascript', src='/assets/js/showflash.js')
